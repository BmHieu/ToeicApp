<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GaMoReadingPart5Activity"
    android:background="@color/yellow">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="110dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        ></ImageView>

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="100dp">
        <ImageView
            android:id="@+id/avt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/avt"
            />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btngamop5backtorc"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_backpage_50dp"
        app:backgroundTint="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="Gà Mờ"
        android:layout_marginTop="73dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:textStyle="bold"
        android:background="@drawable/radiusbtn"
        android:textAlignment="center"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="115dp"
        android:layout_marginHorizontal="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Reading - Part 5"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:background="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="170dp">
        <Button
            android:id="@+id/btnreadgamop5b1"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/radiusbtn"
            android:text="Bài 1"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            android:textAlignment="textStart"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/btnreadgamop5b2"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/radiusbtn"
            app:backgroundTint="#FFFFFF"
            android:text="Bài 2"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="textStart"
            style="?android:attr/borderlessButtonStyle"
            />
        <Button
            android:id="@+id/btnreadgamop5b3"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/radiusbtn"
            app:backgroundTint="#FFFFFF"
            android:text="Bài 3"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="textStart"
            style="?android:attr/borderlessButtonStyle"
            />
        <Button
            android:id="@+id/btnreadgamop5b4"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/radiusbtn"
            app:backgroundTint="#FFFFFF"
            android:text="Bài 4"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="textStart"
            style="?android:attr/borderlessButtonStyle"
            />
    </LinearLayout>

</RelativeLayout>