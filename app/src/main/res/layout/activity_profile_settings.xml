<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileSettingsActivity"
    android:background="@drawable/bg_profile">

    <Button
        android:id="@+id/btnbacktosettings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_backpage_50dp"
        android:backgroundTint="#000000"
        android:backgroundTintMode="multiply"
        android:shadowDx="0"
        app:backgroundTint="@color/black"
        style="?android:attr/borderlessButtonStyle"/>

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="1000dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="110dp"
        android:background="@color/white"
        android:outlineAmbientShadowColor="@color/black"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="25dp">

        <EditText
            android:id="@+id/editusername_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textColorHint="@color/black"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22dp"/>
        <Button
            android:id="@+id/btnsaveprofilesettings"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/radiusbtn"
            android:backgroundTint="@color/yellow"
            android:paddingHorizontal="20dp"
            android:text="Lưu thay đổi"
            android:textColor="@color/black"
            app:backgroundTint="@color/yellow" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="200dp"
        android:background="@drawable/avtoval"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/avt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/avtoval"
            android:scaleType="centerCrop"
            ></ImageView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="150dp"
        app:cardBackgroundColor="#000000"
        app:cardCornerRadius="100dp">
        <Button
            android:id="@+id/editavtimage"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/ic_edit_50"
            android:backgroundTint="#FFFFFF"
            app:backgroundTint="@color/white" />
    </androidx.cardview.widget.CardView>



</RelativeLayout>