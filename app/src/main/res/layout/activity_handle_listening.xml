<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".handle.HandleListeningActivity"
    android:background="@color/yellow">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="120dp"
        android:src="@drawable/logo"
        ></ImageView>

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="100dp">
        <ImageView
            android:id="@+id/avt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/avt"
            />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnbacktolis"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_backpage_50dp"
        app:backgroundTint="#000000"
        style="?android:attr/borderlessButtonStyle"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="660dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="70dp"
        app:cardBackgroundColor="#C4C4C4">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="65dp"
            android:background="@color/black"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btngamop1play"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_play_50"
                app:backgroundTint="#000000"
                />
            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/remainingtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="20sp"
                android:text="00:00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="70dp"
            android:layout_marginHorizontal="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/liscardimageview"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:outlineSpotShadowColor="@color/black"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imglistest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="15dp"
                            android:layout_marginTop="10dp"
                            android:scaleType="fitCenter" />
                    </LinearLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:outlineSpotShadowColor="@color/black"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lisquestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="1:"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <RadioGroup
                            android:id="@+id/radiogrouplisbai1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/rdbtnlisa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="a"
                                android:textColor="@color/black" />

                            <RadioButton
                                android:id="@+id/rdbtnlisb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="b"
                                android:textColor="@color/black" />

                            <RadioButton
                                android:id="@+id/rdbtnlisc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="c"
                                android:textColor="@color/black" />

                            <RadioButton
                                android:id="@+id/rdbtnlisd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="d"
                                android:textColor="@color/black" />
                        </RadioGroup>
                    </LinearLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btnlisbai1next"
        android:layout_width="152dp"
        android:layout_height="47dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="NEXT"
        android:textColor="@color/black"
        android:background="@drawable/radiusbtn"
        android:textSize="26dp"
        android:textStyle="bold"
        app:backgroundTint="@color/yellow" />
    <Button
        android:id="@+id/btnlisbai1prev"
        android:layout_width="152dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/radiusbtn"
        android:text="Prev"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="bold"
        app:backgroundTint="@color/yellow" />
</RelativeLayout>