<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignUpActivity"
    android:background="@drawable/bg_profile">
    <Button
        android:id="@+id/btnbacksignuptologin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_backpage_50dp"
        android:backgroundTint="#000000"
        android:backgroundTintMode="multiply"
        android:shadowDx="0"
        app:backgroundTint="@color/black"
        style="?android:attr/borderlessButtonStyle"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Đăng ký"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginHorizontal="20dp"
            android:text="Tên Của Bạn"
            android:textColor="@color/violet"
            android:textSize="18dp"
            />
        <EditText
            android:id="@+id/edtSignUpUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:hint="Nhập Tên của bạn"
            android:background="@drawable/bg_edittext_normal"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="Email Đăng Nhập"
            android:textColor="@color/violet"
            android:textSize="18dp"
            />
        <EditText
            android:id="@+id/edtSingUpEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:hint="Nhập Email đăng nhập"
            android:background="@drawable/bg_edittext_normal"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:inputType="textEmailAddress"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="Mật Khẩu"
            android:textColor="@color/violet"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/edtSingUpPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext_normal"
            android:hint="Nhập Mật khẩu"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            app:passwordToggleEnabled="true" />
        <CheckBox
            android:id="@+id/checkboxAccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="Tôi đồng ý với các điều khoản"
            android:textSize="20dp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/radiusbtn"
        android:text="Đăng ký"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:backgroundTint="@color/yellow"
        android:layout_centerHorizontal="true"
        style="?android:attr/borderlessButtonStyle" />
</RelativeLayout>