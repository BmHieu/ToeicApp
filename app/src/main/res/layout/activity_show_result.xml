<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShowResultActivity"
    android:background="@drawable/bg_profile">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="60dp"
        android:text="Hoàn thành"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <View
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/ic_baseline_check_circle_24"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/green"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="340dp"
        android:text="Chúc mừng bạn đã hoàn thành bài luyện thi"
        android:textSize="18dp"
        android:textAlignment="center"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="365dp"
        android:text="Số câu trả lời đúng là:"
        android:textSize="18dp"
        android:textAlignment="center"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txtcountcorrectanswer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="390dp"
        android:text="5/10"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="@color/violet"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="445dp"
        android:text="Số điểm đạt được là:"
        android:textSize="18dp"
        android:textAlignment="center"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txtscore"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="470dp"
        android:text="25"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="@color/violet" />

    <Button
        android:id="@+id/btnnexttohome"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="120dp"
        android:text="Tiếp theo"
        android:textSize="24dp"
        android:textColor="@color/black"
        app:backgroundTint="@color/yellow"
        android:background="@drawable/radiusbtn"/>

</RelativeLayout>