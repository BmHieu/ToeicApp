<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment"
    android:background="@color/yellow"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-3dp"
        android:src="@drawable/logo"
        ></ImageView>

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="200dp"
        android:background="@drawable/avtoval">
        <ImageView
            android:id="@+id/avt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/avtoval"
            android:scaleType="centerCrop"
            ></ImageView>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/homescrollView"
        android:layout_width="420dp"
        android:layout_height="600dp"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gamo"
                    android:textAppearance="@style/gamo"
                    android:gravity="top"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/black"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/btnlisgamo"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/radiusbtn"
                android:fontFamily="@font/utmavo"
                android:text="Ôn luyện Listening"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:backgroundTint="#FFFFFF" />
            <Button
                android:id="@+id/btnreadgamo"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/btnlisgamo"
                android:background="@drawable/radiusbtn"
                app:backgroundTint="#FFFFFF"
                android:text="Ôn luyện Reading"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/utmavo"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/btnwrigamo"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/btnreadgamo"
                android:background="@drawable/radiusbtn"
                app:backgroundTint="#FFFFFF"
                android:text="Ôn luyện Writing"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/utmavo"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/btnspegamo"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/btnwrigamo"
                android:background="@drawable/radiusbtn"
                app:backgroundTint="#FFFFFF"
                android:text="Ôn luyện Speaking"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/utmavo"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trung cấp"
                    android:textAppearance="@style/gamo"
                    android:gravity="top"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/black"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btnlistrungcap"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/radiusbtn"
                android:fontFamily="@font/utmavo"
                android:text="Ôn luyện Listening"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:backgroundTint="#FFFFFF" />
            <Button
                android:id="@+id/btnreadtrungcap"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/btnlistrungcap"
                android:background="@drawable/radiusbtn"
                app:backgroundTint="#FFFFFF"
                android:text="Ôn luyện Reading"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/utmavo"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/btnwritrungcap"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/btnreadtrungcap"
                android:background="@drawable/radiusbtn"
                app:backgroundTint="#FFFFFF"
                android:text="Ôn luyện Writing"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/utmavo"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/btnspetrungcap"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/btnwritrungcap"
                android:background="@drawable/radiusbtn"
                app:backgroundTint="#FFFFFF"
                android:text="Ôn luyện Speaking"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/utmavo"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cao cấp"
                    android:textAppearance="@style/gamo"
                    android:gravity="top"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/black"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/liscaocap"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/radiusbtn"
                android:fontFamily="@font/utmavo"
                android:text="Ôn luyện Listening"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:backgroundTint="#FFFFFF" />
            <Button
                android:id="@+id/readcaocap"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/liscaocap"
                android:background="@drawable/radiusbtn"
                app:backgroundTint="#FFFFFF"
                android:text="Ôn luyện Reading"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/utmavo"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/wricaocap"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/readcaocap"
                android:background="@drawable/radiusbtn"
                app:backgroundTint="#FFFFFF"
                android:text="Ôn luyện Writing"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/utmavo"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/Specaocap"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/wricaocap"
                android:background="@drawable/radiusbtn"
                app:backgroundTint="#FFFFFF"
                android:text="Ôn luyện Speaking"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/utmavo"
                android:textStyle="bold"
                />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>